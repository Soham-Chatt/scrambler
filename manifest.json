{
  "manifest_version": 2,
  "name": "Cube Scramble Generator",
  "version": "1.0",
  "description": "Generates random Rubik's Cube scrambles.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Cube Scramble Generator",
    "default_icon": {
      "16": "icon.svg",
      "48": "icon.svg",
      "128": "icon.svg"
    }
  }
}
